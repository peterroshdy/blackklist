<% include ../partials/header %>

<section class="new_startup_banner_area">
    <div class="container">
        <form class="text-center" action="/search" method="POST">
            <button class="search_box_submit_btn" type="submit">ðŸ”Ž</button>
            <input class="search_box" placeholder="Search here" type="search" name="query" autofocus="off"
                autocomplete="off" required>
        </form>
        <div class="row text-center">

            <% if (phones){ %>
            <% phones.forEach(phone => { %>
            <div class="this_is_phone col-lg-4">
                <p><b><a href="phone/<%= phone.id%>"><%= phone.id%></a></b></p>
                <p><b>Brand : </b><%= phone.brand%></p>

                <%if (phone.imei_number) { %>
                <p><b>IMEI : </b><%= phone.imei_number%></p>
                <%}else{%>
                <p> IMEI : Unknown</p>
                <% } %>
                <p><b>Submitting date : </b><%= moment(phone.created_at).format( 'LLL') %></p>
                <p> <%if (phone.user_id == user.id) {%>
                    <a href="remove/<%= phone.id%>">Remove</a>
                    <% } %>
                </p>
            </div>
            <% }); %>
            <% } %>


        </div>

</section>
<div class="spacer"></div>
<% include ../partials/footer %>